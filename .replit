entrypoint = "manage.py"
modules = ["python-3.10:v18-20230807-322e88b", "postgresql-16"]
hidden = [".pythonlibs"]
run = "python -m daphne -p 3000 -b 0.0.0.0 django_project.asgi:application"


[nix]
channel = "stable-23_11"
packages = ["bash", "libxcrypt"]
[deployment]
run = [
  "sh",
  "-c",
  "watchfiles --reload-signal SIGHUP 'python -m daphne -p 3000 -b 0.0.0.0 django_project.asgi:application'",
]


deploymentTarget = "cloudrun"

[[ports]]
localPort = 3000
externalPort = 80

[[ports]]
localPort = 3001
externalPort = 3001
[env]
PYTHON_PACKAGES = ".pythonlibs"
[packager]
language = "python3"
ignoredPackages = ["unit_tests"]
[packager.features]
enabledForHosting = false
packageSearch = true
guessImports = true
[languages]
[languages.python3]
pattern = "**/*.py"
[languages.python3.languageServer]
start = "pylsp"
[unitTest]
language = "python3"
[gitHubImport]
requiredFiles = [".replit", "replit.nix", ".config"]
